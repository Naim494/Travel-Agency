<div class="leftDiv">
  <div class="formContainer">
    <h4 class="sourceHeader"> Source: </h4>
    <form>

      <div class="source">
        <div class="input-group">
          <input type="text" class="form-control mb-2" id="country" placeholder="Country" name="country">
          <input type="text" class="form-control mb-2" id="state" placeholder="State" name="state">
          <input type="text" class="form-control mb-2" id="city" placeholder="City" name="city">
        </div>
        <div class="col-sm-3">
          <input type="text" class="form-control mb-2" id="departTime" placeholder="Depart Time" name="departTime">
          <input type="text" class="form-control mb-2" id="departDate" placeholder="Depart Date" name="departDate">
        </div>
      </div>

      <br><br>

      <h4 class="destinationHeader"> Destination: </h4>
      <div class="destination">
        <div class="input-group">
          <input type="text" class="form-control mb-2" id="country" placeholder="Country" name="country">
          <input type="text" class="form-control mb-2" id="state" placeholder="State" name="state">
          <input type="text" class="form-control mb-2" id="city" placeholder="City" name="city">
        </div>
        <div class="col-sm-3">
          <input type="text" class="form-control mb-2" id="departTime" placeholder="Depart Time" name="departTime">
          <input type="text" class="form-control mb-2" id="departDate" placeholder="Depart Date" name="departDate">
        </div>
      </div>

      <br><br>

      <h4 class="groupHeader"> Group: </h4>
      <div class="transport">
        <div class="col-sm-10">
          <input type="text" class="form-control mb-2" id="purpose" placeholder="Purpose" name="purpose">
        </div>

        <div class="col-sm-2">
          <input type="text" class="form-control mb-2" id="size" placeholder="Size" name="size">
        </div>

        <div class="col-sm-10">
          <input type="text" class="form-control mb-2" id="activity" placeholder="Activity" name="activity">
        </div>
      </div>

      <br><br>

      <h4 class="busHeader"> Bus: </h4>
      <div class="transport">
        <div class="col-sm-6">
          <input type="text" class="form-control mb-2" id="busTicketNumber" placeholder="Bus Ticket #" name="busTicketNumber">
        </div>

        <div class="col-sm-4">
          <input type="text" class="form-control mb-2" id="busPrice" placeholder="Bus Price" name="busPrice">
        </div>
      </div>

      <br><br>

      <h4 class="cruiseHeader"> Cruise: </h4>
      <div class="transport">
        <div class="col-sm-6">
          <input type="text" class="form-control mb-2" id="cruiseTicketNumber" placeholder="Cruise Ticket #" name="cruiseTicketNumber">
        </div>

        <div class="col-sm-4">
          <input type="text" class="form-control mb-2" id="cruisePrice" placeholder="Cruise Price" name="cruisePrice">
        </div>
      </div>

      <br><br>

      <h4 class="flightHeader"> Flight: </h4>
      <div class="transport">
        <div class="col-sm-6">
          <input type="text" class="form-control mb-2" id="flightTicketNumber" placeholder="Flight Ticket #" name="flightTicketNumber">
        </div>

        <div class="col-sm-4">
          <input type="text" class="form-control mb-2" id="flightPrice" placeholder="Flight Price" name="flightPrice">
        </div>
      </div>

      <br><br>

      <h4 class="carHeader"> Car: </h4>
      <div class="transport">
        <div class="col-sm-6">
          <input type="text" class="form-control mb-2" id="carVin" placeholder="Car VIN #" name="carVin">
        </div>

        <div class="col-sm-4">
          <input type="text" class="form-control mb-2" id="carPrice" placeholder="Car Price" name="carPrice">
        </div>
      </div>

      <br><br>


      <div class="col-auto">
        <button id="signUpBtn" type="submit" class="btn btn-primary mb-2"> Add Trip</button>
      </div>
